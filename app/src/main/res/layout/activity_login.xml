<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_weight="1"
    android:orientation="vertical"

    tools:context=".LoginActivity">

    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"



        android:layout_weight="8"
        android:padding="25dp"

        android:background="@drawable/login_back21"

        android:gravity="bottom"
        android:orientation="vertical">





            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@xml/text_view_button"
                android:hint="@string/prompt_email"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"

                android:textAlignment="center"
                android:layout_marginBottom="5dp"


                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:maxLines="1"
                android:requiresFadingEdge="horizontal|vertical"
                android:singleLine="true"
                android:textSize="24sp" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@xml/text_view_button"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"

            android:imeOptions="actionUnspecified"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp" />



        <Button
            android:id="@+id/email_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textColor="@color/button_text_color_white"
            android:background="@drawable/mybutton"
            android:textSize="18sp"
            android:onClick="signIn"

            android:text="@string/action_sign_in"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reset_password"

            android:layout_marginTop="35dp"
            android:gravity="center_vertical"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="end"
            android:onClick="resetPasswordAuth"

            android:shadowColor="@color/white"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"




            android:text="Forget Password ?"
            android:textAlignment="center"
            android:layout_marginBottom="25dp"


            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal"
            app:fontFamily="@font/carter_one" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signUp_area"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/or2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOT A MEMBER YET?"
            android:textAlignment="center"
            android:textColor="#E53935"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="#161515"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"

            app:fontFamily="@font/carter_one" />

        <Button
            android:id="@+id/email_sign_up_button2"

            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="8dp"
            android:background="@drawable/circular_button_red"

            android:onClick="signUp"

            android:shadowColor="#161515"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"

            android:text="@string/action_sign_up"
            android:textAllCaps="true"
            android:textColor="@color/button_text_color_white"

            android:textSize="18sp"

            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>