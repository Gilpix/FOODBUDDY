<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kulartist.foodbuddy">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/food_buddy"
        android:label="@string/app_name"
        android:roundIcon="@drawable/food_buddy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="home.Messages"></activity>
        <activity
            android:name="home.BuddyProfile"
            android:label="@string/title_activity_buddy_profile" />
        <activity android:name="home.MyProfile" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/text_view_button" />

        <activity android:name="home.Notification" />
        <activity android:name="home.Restaurant" />
        <activity android:name="home.Settings" />
        <activity android:name="home.Buddies" />
        <activity android:name="home.Home" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".ResetPassAuthenticate" />
        <activity android:name=".Registration" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>